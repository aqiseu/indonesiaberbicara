<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.indonesiaberbicara.discussionapp.DetailArticleActivity"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:toolbarId="@+id/toolbar" >

            <RelativeLayout
                app:layout_collapseMode="parallax"
                android:id="@+id/relativelayout_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    android:foreground="@android:drawable/screen_background_dark_transparent"  />

                <TextView
                    android:id="@+id/tv_discussion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/tv_discussion_content"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="9dp"
                    android:textSize="16sp"
                    android:textColor="#ffff"
                    android:lineSpacingExtra="4sp"
                    android:text="Menyingkap Program Gubernur “Baru” DKI Jakarta 2017: OK OCE Hingga DP 0%"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_discussion_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/rl_discussion_date"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="9dp"
                    android:textSize="16sp"
                    android:text="LINK"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_discussion_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_discussion_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Oktober 2017"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:paddingLeft="10dp" />
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                app:titleTextColor="#000"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_panel_discussion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="5sp"
                    android:text="Panel Diskusi"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/cv_chat_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_chat_text"
                    android:hint="Tulis Pandanganmu"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="17dp"
                    android:enabled="false"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

<ProgressBar
    android:id="@+id/progress_bar"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="invisible"/>

</RelativeLayout>